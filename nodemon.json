{
  "watch": ["src/backend"],
  "ext": "ts,json",
  "ignore": ["src/backend/**/*.spec.ts"],
  "exec": "npx ts-node --project tsconfig.node.json --transpile-only --skip-ignore src/backend/server.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_COMPILER_OPTIONS": "{\"module\":\"commonjs\",\"strict\":false,\"noImplicitAny\":false,\"isolatedModules\":true}"
  }
}