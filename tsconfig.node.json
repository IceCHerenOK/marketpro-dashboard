{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist/backend",
    "rootDir": "./src/backend",
    "target": "ES2020",
    "lib": ["ES2020"],
    "noImplicitAny": false,
    "checkJs": false,
    "diagnostics": false
  },
  "include": ["src/backend/**/*"],
  "exclude": ["node_modules", "dist", "src/frontend", "src/electron"]
}