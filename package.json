{
  "name": "russian-marketplace-dashboard",
  "version": "1.0.0",
  "description": "Панель управления российскими маркетплейсами (ВБ, ОЗОН, Яндекс Маркет, Мегамаркет, Магнитмаркет)",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon",
    "build": "npm run build:frontend && npm run build:backend && npm run build:electron",
    "build:frontend": "vite build",
    "build:backend": "tsc -p tsconfig.backend.json --skipLibCheck --noEmitOnError false",
    "build:electron": "tsc -p tsconfig.electron.json",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5176 && electron .\"",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:portable": "npm run build && electron-builder --win portable",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "node -e \"if(!process.env.SKIP_ELECTRON_REBUILD){require('child_process').execSync('electron-builder install-app-deps',{stdio:'inherit'})}else{console.log('Skipping electron rebuild');}\""
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemon": "^3.0.2",
    "sql.js": "^1.10.3",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.2",
    "date-fns": "^3.0.6",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "lucide-react": "^0.300.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.8.0",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "vite": "^5.0.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.marketpro.dashboard",
    "productName": "MarketPro-v2",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "src/electron/backend-stub.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "publisherName": "MarketPro Team",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "signDlls": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MarketPro",
      "uninstallDisplayName": "MarketPro - Панель управления маркетплейсами",
      "license": "LICENSE.txt",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.png",
      "installerHeaderIcon": "assets/icon.png",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Business"
    },
    "portable": {
      "artifactName": "MarketPro-Portable-${version}.${ext}"
    }
  }
}
